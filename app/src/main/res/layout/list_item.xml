<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sushil.actionbar.Second"
    android:paddingLeft="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2.0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="true"
        android:layout_gravity="center_horizontal"
        card_view:cardBackgroundColor="#fff"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:theme="@style/CardView.Light"
        android:id="@+id/view3"
        android:layout_alignParentTop="true"
       >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_selector">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_marginRight="200dp"
            />
        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
           android:layout_marginLeft="130dp"
            android:textColor="#0b0080"
            android:textSize="16dp"
            android:text="NAME"
            />
        <TextView
            android:id="@+id/country_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/country_name"
            android:layout_marginLeft="130dp"
            android:textColor="#0b0080"
            android:textSize="16dp"
            android:text="country"
            />
        <TextView
            android:id="@+id/textViewOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/country_name"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="&#8942;"
            android:textColor="#ff74d0"
            android:paddingRight="10dp"
            android:textAppearance="?android:textAppearanceLarge" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_action_remove"
            android:id="@+id/remove"
            android:text="delete"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
